/*Dispositivos Periféricos
Josyane da Silva Sampaio

Com base na planta virtyal do elevador, projetar um sistema de funcionamento para controlar o andar do elevador através de três botões (T,1,2)
sem usar a realimentação pela serial, ou seja, armazenando a posição do elevador em variável independente.

*/

//Parâmetros iniciais PIC e Serial
#include <18F4550.h>
#fuses HS, CPUDIV1,PLL5,USBDIV
#use delay(clock=20000000)
#use rs232(baud=9600, xmit=PIN_C6, rcv=PIN_C7)
//motor 288yj-48 possui 2048 passos por royação ou 0,175º por passo

#byte   portd = 0xF83 //
#define Button_Floor2   pin_b2   //Botao para subir elevador 2 andar
#define Button_Floor1   pin_b1   //Botao para subir elevador 1 andar
#define Button_Terreo   pin_b0   //Botao para o terreo   

int tm0= 61;    //Interrupcao para 0.01s

//variáveis de armazenamento dos botões
int button_0flag     = 0;
int button_1flag     = 0;
int button_2flag     = 0;

int8 floorID         = 2; // Variável para ler o andar (Inicia no andar 2)

//dividido por 100 devido passos no teste do simulador
int16 pulsesMotor    = 156;//46; pulsos total do motor 
int16  first_floor      = 19; //55; 7823/4; equivalente a 6m - motor de 4 polos
int16  second_floor     = 39;//11; 15646/4; equivalente a 12m - motor de 4 polos

int temp = 2; //tempo= 2ms => 2048*0,002=4,096 segundos (período do motor)

/* A interrupção TMR0 é gerada quando o registrador TMR0 estoura (overflow), conta de FF para 00.
Este overflow seta o bit T0IF (bit 2 do Reg. INTCON) */
#int_timer0

void buttonCheck() 
{ 
   static unsigned int16 n; 
   set_timer0(tm0+get_timer0()); 
   n++;
   if (n==50)                                                                  //Varredura de botoes a cada 0.5s
   { 
      n=0;
      if((!input(Button_Terreo))&&(input(Button_Floor1))&&(input(Button_Floor2)))
      {
         button_0flag   = 1;
         button_1flag   = 0;
         button_2flag   = 0;
      }
      else if((input(Button_Terreo))&&(!input(Button_Floor1))&&(input(Button_Floor2)))
      {
         button_0flag   = 0;
         button_1flag   = 1;
         button_2flag   = 0;
      }
      else if((input(Button_Terreo))&&(input(Button_Floor1))&&(!input(Button_Floor2)))
      {
         button_0flag   = 0;
         button_1flag   = 0;
         button_2flag   = 1;
      }
      
      //scheduler++;
   }
} 
void main()
{
   set_tris_d(0x00);
   set_tris_b(0xFF);
   port_b_pullups (true);
   enable_interrupts(GLOBAL); 
   enable_interrupts(INT_TIMER0); 
      
      
   setup_timer_0 (RTCC_DIV_256|RTCC_INTERNAL | RTCC_8_BIT ); //configuração interrupção 
   set_timer0(tm0);
   

   while(1)
   {
      if(button_0flag)// Botão do terreo pressionado
      {
        switch(floorID)
        {
         case 0://Caso esteja no terro para p terro faz nada, abre a porta
            printf("a\r\n"); //Abrir a porta
            pulsesMotor = 0;
            button_0flag = 0;
            break;
         case 1://Caso esteja no andar 1 e vai para o terreo
            printf("f\r\n");
            while(pulsesMotor > 0)
            {
               portd=0b10010000;
               delay_ms(temp);
               printf("d\r\n");
               portd=0b00110000;
               delay_ms(temp);
               printf("d\r\n");
               portd=0b01100000;
               delay_ms(temp);
               printf("d\r\n");
               portd=0b11000000;
               delay_ms(temp);
               printf("d\r\n");
               pulsesMotor--;
            }
            printf("a\r\n");
            floorID = 0;
            button_0flag = 0;
            pulsesMotor = 0;

            break;
         case 2://Caso esteja no andar 2 e vá para o terreo
            printf("f\r\n");
            while(pulsesMotor > 0)
            {
               portd=0b10010000;
               delay_ms(temp); 
               printf("d\r\n");
               portd=0b00110000;
               delay_ms(temp);
               printf("d\r\n");
               portd=0b01100000;
               delay_ms(temp);
               printf("d\r\n");
               portd=0b11000000;
               printf("d\r\n");
               delay_ms(temp);
               pulsesMotor--;
            }
            printf("a\r\n");
            floorID = 0;
            button_0flag = 0;
            pulsesMotor = 0;

            break;
         default:
            break;
        }
      }//Se o botão térreo estiver pressionado
        
      if(button_1flag)//Botão do andar 01 pressionado
      {
        switch(floorID)
        {
         case 0://Caso esteja no terreo para para ir para o andar 01: sobe
            printf("f\r\n");
            while(pulsesMotor < first_floor)
            {
               portd=0b11000000;
               printf("s\r\n");
               delay_ms(temp);
               portd=0b01100000;
               printf("s\r\n");
               delay_ms(temp);
               portd=0b00110000;
               printf("s\r\n");
               delay_ms(temp);
               portd=0b10010000;
               printf("s\r\n");
               delay_ms(temp); 
               pulsesMotor++;
            }
            printf("a\r\n");
            floorID = 1;
            button_1flag = 0;
            pulsesMotor = first_floor;
            break;
         case 1://Caso esteja no andar 1 para o andar 1: Faz nada
            printf("a\r\n"); //Abrir a porta
            pulsesMotor = first_floor;
            button_1flag = 0;
            break;

         case 2://Caso esteja no andar 2 para o andar 1
             printf("f\r\n");
            while(pulsesMotor > first_floor)
            {
               portd=0b10010000;
               printf("d\r\n");
               delay_ms(temp);  
               portd=0b00110000;
               printf("d\r\n");
               delay_ms(temp);
               portd=0b01100000;
               printf("d\r\n");
               delay_ms(temp);
               portd=0b11000000;
               printf("d\r\n");
               delay_ms(temp);
               pulsesMotor--;
            }
            printf("a\r\n");
            floorID = 1;
            button_1flag = 0;
            pulsesMotor = first_floor;

            break;
         default:
            break;
        }
      }//Se o botão do andar 01 estiver pressionado
      
      if(button_2flag)//Apertou o botão do andar 2 
      {
        switch(floorID)
        {
         case 0://Caso esteja no terreo para ir para o andar 2: sobe
            printf("f\r\n");
            while(pulsesMotor < second_floor)
            {
               portd=0b11000000;
               printf("s\r\n");
               delay_ms(temp);
               portd=0b01100000;
               printf("s\r\n");
               delay_ms(temp);
               portd=0b00110000;
               printf("s\r\n");
               delay_ms(temp);
               portd=0b10010000;
               printf("s\r\n");
               delay_ms(temp); 
               pulsesMotor++;
            }
            printf("a\r\n");
            floorID = 2;
            button_2flag = 0;
            pulsesMotor = second_floor;
            break;
         case 1://Caso esteja no andar 1 para ir para o andar 2: Sobe
            printf("f\r\n");
            while(pulsesMotor < second_floor)
            {
               portd=0b11000000;
               printf("s\r\n");
               delay_ms(temp);
               portd=0b01100000;
               printf("s\r\n");
               delay_ms(temp);
               portd=0b00110000;
               printf("s\r\n");
               delay_ms(temp);
               portd=0b10010000;
               printf("s\r\n");
               delay_ms(temp); 
               pulsesMotor++;
            }
            printf("a\r\n");
            floorID = 2;
            button_2flag = 0;
            pulsesMotor = second_floor;
            break;

         case 2://Caso esteja no andar 2 para ir para o andar 01
             printf("a\r\n"); //Abrir a porta
            pulsesMotor = second_floor;
            button_2flag = 0;
            break;
         default:
            break;
        }
      }//Se o botão do andar 2 estiver pressionado
      
   }
}
   
